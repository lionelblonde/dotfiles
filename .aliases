# Prefered version of uname
# Print system information
# -s prints the kernel name
# -r prints the kernel release
alias distro='uname -sr'
# Print the num of logical cores
alias nproc='sysctl -n hw.ncpu'
# Prefered version of ls
alias ll='ls -FGlAhp'
# Prefered version of ln
alias ln='ln -v'
# Prefered version of mkdir
alias mkdir='mkdir -p'
# Navigate up the directories
alias ...='../..'

# Change to most recent directory
alias cdr='cd ./*(/om[1])'

# Replace vim by neovim
alias vim='nvim'

# Return ip address
alias myip='ip route get 8.8.8.8 | awk "{print $NF; exit}"'

# Check status ssh server
alias sss='service ssh status'

# Tmux
alias tmux="tmux -2"
alias ta='tmux attach -t'
alias tnew='tmux new -s'
alias tls='tmux ls'
alias tkill='tmux kill-session -t'

# Convenience aliases for editing configs
alias ea='vim ~/.aliases'
alias ev='vim ~/.vimrc'
alias et='vim ~/.tmux.conf'
alias ez='vim ~/.zshrc'
alias eb='vim ~/.bash_profile'

# Convenience alias to source .zshrc
alias sz='source ~/.zshrc'

# Alias to manage dotfiles via bare git repository
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME'

# Shorten the verbose baobab-related commands containing the identity key
alias sshbaobab='ssh -v -i ~/.ssh/baobab_key_ecdsa blonde0@baobab.unige.ch'
alias rsyncbaobab='rsync -avP -e "ssh -i ~/.ssh/baobab_key_ecdsa"'

# Shorten the verbose ela-related commands containing the identity key
alias sshela='ssh -v -i ~/.ssh/ela_key_ecdsa lblonde@ela.cscs.ch'
alias rsyncela='rsync -avP -e "ssh -i ~/.ssh/ela_key_ecdsa"'

# Shorten the verbose gengar-related commands containing the identity key
# gengar
alias sshgengar='ssh -v -i ~/.ssh/gengar_key_ecdsa lionel@gengar'
alias sshxgengar='ssh -vX -i ~/.ssh/gengar_key_ecdsa lionel@gengar'
alias rsyncgengar='rsync -avP -e "ssh -i ~/.ssh/gengar_key_ecdsa"'
alias tunnelgengar='ssh -v -i ~/.ssh/gengar_key_ecdsa -L 8888:localhost:8888 lionel@gengar'
# gengar0
alias sshgengar0='ssh -v -i ~/.ssh/gengar0_key_ecdsa lionel@gengar0'
alias sshxgengar0='ssh -vX -i ~/.ssh/gengar0_key_ecdsa lionel@gengar0'
alias rsyncgengar0='rsync -avP -e "ssh -i ~/.ssh/gengar0_key_ecdsa"'
alias tunnelgengar0='ssh -v -i ~/.ssh/gengar0_key_ecdsa -L 8888:localhost:8888 lionel@gengar0'

