# convenience alias to source files
alias sz='source ~/.zshrc'
alias ss='source ~/.aliases'

# go to wip directory
alias wip='cd ~/Documents/git/code/wip'
alias ego='cd ~/Documents/git/code/ego/github/private'

# select file in current directory with sk, then ENTER to open it with default app for the type
alias s='fd -t f -e pdf . "$HOME/Documents/pdfs" -H -E .git -0 | sk --read0 --print0 | xargs -0 -I {} open -a Sioyek --args "{}" --execute-command startup_commands'
