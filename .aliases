# Prefered version of uname
# Print system information
# -s prints the kernel name
# -r prints the kernel release
alias distro='uname -sr'
# Print the num of logical cores
alias nproc='sysctl -n hw.ncpu'

# Prefered version of ls
alias lll='ls -FGlAhp'
# Prefered version of exa
alias ll='exa -1la --header --git --color-scale --time=created --time-style=long-iso --octal-permissions --no-user'
# Prefered version of ln
alias ln='ln -v'
# Prefered version of rsync
alias rsync='rsync -avP'
# Prefered version of grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
# Prefered version of cp
alias cp='cp -i'
# Prefered version of df (report file system disk space usage)
alias df='df -h'
# Prefered version of du (estimate file space usage)
alias du='du -h'
alias du.='du -h .'
alias du.1='du -h -d 1 .'
# Prefered version of nettop
alias nettop='nettop -P -k state,interface -d'

# Navigate up the directories
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'

# Change to most recent directory
alias cdr='cd ./*(/om[1])'

# Replace vim by neovim
alias vim='nvim'

# Return ip address
alias myip='ip route get 8.8.8.8 | awk "{print $NF; exit}"'

# Check status ssh server
alias sss='service ssh status'

# Tmux
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias tnew='tmux new -d -s'
alias tls='tmux ls'
alias tkill='tmux kill-session -t'
alias tkillall='tmux kill-server'

# yt-dl
alias ydl='yt-dlp --config-location ~/.ytdlp.conf'

# Convenience aliases for editing configs
alias ea='vim ~/.aliases'
alias ev='vim ~/.vimrc'
alias et='vim ~/.tmux.conf'
alias ez='vim ~/.zshrc'
alias eb='vim ~/.bash_profile'
alias eh='vim ~/.hammerspoon/init.lua'
alias ek='vim ~/.config/kitty/kitty.conf'
alias er='vim ~/Documents/dotfiles/README.md'
alias es='vim ~/Documents/dotfiles/brew.sh'

# Convenience shortcut to quickly reach the Sublime Text configuration folder
alias gtsubl='cd "/Users/lionelblonde/Library/Application Support/Sublime Text/Packages/User"'

alias gtidoc='cd "/Users/lionelblonde/Library/Mobile Documents/com~apple~CloudDocs/Documents"'

# Convenience alias to source .zshrc
alias sz='source ~/.zshrc'

# Create alias to open files from various apps that do not have CLI
alias typora='open -a typora'

# Replace `sed` by `gsed`
alias sed=gsed

