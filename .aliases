# Prefered version of uname
# Print system information
# -s prints the kernel name
# -r prints the kernel release
alias distro='uname -sr'
# Print the num of logical cores
alias nproc='sysctl -n hw.ncpu'

# Prefered version of ls
alias ll='ls -FGlAhp'
# Prefered version of exa
alias xx='exa -1la --header --git --color-scale --time=created --time-style=long-iso --octal-permissions --no-user'

# Prefered version of ln
alias ln='ln -v'
# Prefered version of rsync
alias rsync='rsync -ahP'
# Prefered version of grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
# Prefered version of cp
alias cp='cp -i'
# Prefered version of df (report file system disk space usage)
alias df='df -h'
# Prefered version of du (estimate file space usage)
alias du='du -h'
alias du.='du -h .'
alias du.1='du -h -d 1 .'
# Prefered version of nettop
alias nettop='nettop -P -k state,interface -d'

# Navigate up the directories
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'

# Change to most recent directory
alias cdr='cd ./*(/om[1])'

# neovim (this does not replace vim by neovim)
alias v='nvim'

# Return ip address
alias myip='ip route get 8.8.8.8 | awk "{print $NF; exit}"'

# Check status ssh server
alias sss='service ssh status'

# tmux
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias tnew='tmux new -d -s'
alias tls='tmux ls'
alias tkill='tmux kill-session -t'
alias tkillall='tmux kill-server'

# yt-dl
alias ydl='yt-dlp --config-location ~/.ytdlp.conf'

# kitty
# Automatically copy over the terminfo files and also magically enable shell integration on the remote machine
# https://sw.kovidgoyal.net/kitty/faq/#i-get-errors-about-the-terminal-being-unknown-or-opening-the-terminal-failing-or-functional-keys-like-arrow-keys-don-t-work
alias s="kitty +kitten ssh --kitten share_connections=yes"

